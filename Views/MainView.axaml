<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Organizer.ViewModels;assembly=Organizer"
        xmlns:models="clr-namespace:Organizer.Models;assembly=Organizer"
        x:Class="Organizer.Views.MainView"
        Title="Organizer"
        Width="400" Height="500">

	<Window.DataContext>
		<vm:MainViewModel />
	</Window.DataContext>

	<Grid RowDefinitions="Auto, *, Auto" Margin="0">
		<!-- Top bar: Save button and current date -->
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Button Content="Dzień"
                    Margin="10"
                    Click="SaveList_Click"/>
			<TextBlock Text="{Binding SelectedDate, StringFormat='dd.MM.yyyy'}"
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="10"/>
		</Grid>

		<!-- Lista zadań -->
		<ScrollViewer Grid.Row="1">
			<ItemsControl ItemsSource="{Binding Tasks}">
				<ItemsControl.ItemTemplate>
					<DataTemplate DataType="models:TaskItem">
						<Border BorderBrush="Blue"
                                BorderThickness="1"
                                CornerRadius="8"
							Margin="2"
							Padding="10"
							Background="{Binding IsDone, Converter={StaticResource BoolToBackgroundColorConverter}}"> <!-- Zmienny kolor tła -->

							<Grid ColumnDefinitions="Auto, *, Auto" Margin="5">
								<!-- CheckBox do zaznaczenia zadania jako wykonanego -->
								<CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Margin="5"
                                          VerticalContentAlignment="Center"
                                          Width="20"/>

								<!-- Tekst zadania -->
								<TextBlock Text="{Binding Text}"
                                           VerticalAlignment="Center"
                                           Margin="10, 0, 0, 0"
                                           Grid.Column="1"/>

								<!-- Przycisk do usunięcia zadania -->
								<Button Grid.Column="2"
                                        Click="Delete_Click"
                                        CommandParameter="{Binding .}">
									<PathIcon Data="M3,6 L5,6 L5,17 C5,18.1 5.9,19 7,19 L15,19 C16.1,19 17,18.1 17,17 L17,6 L19,6 L19,4 L15,4 L15,3 C15,2.4 14.6,2 14,2 L10,2 C9.4,2 9,2.4 9,3 L9,4 L5,4 L5,6 Z"
                                              Height="16" Width="16"
                                              Foreground="Red"/>
								</Button>
							</Grid>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>

		<!-- Dodawanie zadania -->
		<Grid Grid.Row="2" Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<TextBox x:Name="NewTaskTextBox"
                     Grid.Column="0"
                     Text="{Binding NewTaskText, UpdateSourceTrigger=PropertyChanged}"
                     Watermark="Add a new task..."
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"/>
			<Button Grid.Column="1"
                    Click="Add_Click"
                    Margin="5,0,0,0">
				<PathIcon Data="M8,2 L10,2 L10,8 L16,8 L16,10 L10,10 L10,16 L8,16 L8,10 L2,10 L2,8 L8,8 Z"
                          Height="16" Width="16"
                          Foreground="Green"/>
			</Button>
		</Grid>
	</Grid>
</Window>
