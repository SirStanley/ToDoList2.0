<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Organizer"
             xmlns:converters="using:Organizer.Converters"
             x:Class="Organizer.App"
             RequestedThemeVariant="Default">

	<Application.DataTemplates>
		<local:ViewLocator />
	</Application.DataTemplates>

	<Application.Styles>
		<FluentTheme />
	</Application.Styles>

	<Application.Resources>
		<converters:BoolToBackgroundColorConverter x:Key="BoolToBackgroundColorConverter" />
		<converters:ExclamationToBrushConverter x:Key="ExclBrush" />
	</Application.Resources>

</Application>
