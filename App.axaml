<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Organizer.App"
             xmlns:local="using:Organizer"
             xmlns:converters="using:Organizer.Converters"
             RequestedThemeVariant="Default">

	<Application.DataTemplates>
		<local:ViewLocator />
	</Application.DataTemplates>

	<Application.Styles>
		<!-- Przywrócenie FluentTheme z właściwości Mode -->
		<FluentTheme/>
	</Application.Styles>

	<Application.Resources>
		<!-- Dodanie konwertera do zasobów aplikacji -->
		<converters:BoolToBackgroundColorConverter x:Key="BoolToBackgroundColorConverter" />
	</Application.Resources>
</Application>
