<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Organizer.Views.CalendarWindow"
        Title="Wybierz datę"
        Width="300" Height="150">

	<StackPanel Margin="20" Spacing="10">
		<DatePicker x:Name="DatePicker" SelectedDate="{Binding SelectedDate}" />
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
			<Button Content="Zapisz" Click="Save_Click" />
			<Button Content="Anuluj" Click="Cancel_Click" />
			<Button Content="Otwórz" Click="Open_Click" />
		</StackPanel>
	</StackPanel>
</Window>